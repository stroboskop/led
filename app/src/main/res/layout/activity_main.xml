<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ostrovskypc.sterowaniezdalne.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBlueOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Włącz"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="80dp"
                android:background="@color/colorBlue"/>

            <Button
                android:id="@+id/buttonBlueOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="wyłącz"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="16dp"
                android:background="@color/colorBlue"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonGreenOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Włącz"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="80dp"
                android:background="@color/colorGreen"/>

            <Button
                android:id="@+id/buttonGreenOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wyłącz"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="16dp"
                android:background="@color/colorGreen"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonRedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Włącz"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="80dp"
                android:background="@color/colorRed"
                />

            <Button
                android:id="@+id/buttonRedOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wyłącz"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="16dp"
                android:background="@color/colorRed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <EditText
                android:id="@+id/editTextIP"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="IP"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="299dp" />



        </LinearLayout>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz" />
    </LinearLayout>


</GridLayout>
